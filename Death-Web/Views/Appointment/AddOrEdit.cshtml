@model Death_Web.Models.AppointmentWeb


@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.IdAppointment)

        <div class="form-group">
            @Html.LabelFor(model => model.AppointmentDateTime)
            @Html.EditorFor(model => model.AppointmentDateTime)
            @Html.ValidationMessageFor(model => model.AppointmentDateTime)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Hour)
            @Html.EditorFor(model => model.Hour)
            @Html.ValidationMessageFor(model => model.Hour)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Note)
            @Html.EditorFor(model => model.Note)
            @Html.ValidationMessageFor(model => model.Note)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }
